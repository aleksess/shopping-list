<li id="entry_<%= entry.id %>" >
  <span hx-patch="/lists/<%= entry.shopping_list.id %>/entries/<%= entry.id %>" hx-target="#entry_<%= entry.id %>" hx-swap="outerHTML">
  <% if entry.done %>
    <s><%= entry.item %></s>
  <% else %>
    <%= entry.item %>
  <% end %>
  </span>
  
  <% if entry.amount %>
    : <%= entry.amount %>
  <% end %>

  <% unless entry.saved %>
  <button hx-delete="/lists/<%= entry.shopping_list.id %>/entries/<%= entry.id %>" hx-target="#entry_<%= entry.id %>" hx-swap="outerHTML"> X 
  </button> 
  <% end %>
</li>


